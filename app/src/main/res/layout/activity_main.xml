<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cui.loadingviews.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startLoading"
        android:onClick="startLoading"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loadingSuccess!"
        android:onClick="loadingSuccess"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="loadingFailed!"
        android:onClick="loadingFailed"
        />

    <com.cui.loadingviews.view.ZFBLoadingView
        android:id="@+id/view_main"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <com.cui.loadingviews.view.LoadingView
        android:id="@+id/loadingView_main"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        app:contentPadding="18dp"
        app:type="NumberLoading"
        />
</LinearLayout>
